<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- SMS permissions -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <!-- Additional SMS-related permissions required for complete SMS functionality -->
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
    
    <!-- Notification permissions (required for Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground service permissions for WorkManager (Android 9+ / Android 14 dataSync) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    
    <!-- Dual SIM and subscription permissions (required for API 22+) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <!-- Hardware features required for SMS functionality -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:name=".BulkSmsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BulkSMS"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.conversation.ConversationActivity"
            android:exported="false"
            android:theme="@style/Theme.BulkSMS.NoActionBar" />

        <activity
            android:name=".ui.privacy.PrivacyPolicyActivity"
            android:exported="false"
            android:label="Privacy Policy"
            android:theme="@style/Theme.BulkSMS.NoActionBar" />

        <activity
            android:name=".auth.BiometricSettingsActivity"
            android:exported="false"
            android:label="Biometric Settings"
            android:theme="@style/Theme.BulkSMS.NoActionBar" />
        
        <!-- Broadcast receivers for SMS sent/delivered tracking -->
        <receiver
            android:name=".workers.SmsDeliveryReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.afriserve.smsmanager.SMS_SENT" />
                <action android:name="com.afriserve.smsmanager.SMS_DELIVERED" />
            </intent-filter>
        </receiver>
        
        <!-- SMS_DELIVER receiver for default SMS app (Android 4.4+) -->
        <receiver
            android:name=".receivers.SmsDeliverReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>
        </receiver>
        
        <!-- SMS_RECEIVED receiver for fallback (when not default SMS app) -->
        <receiver
            android:name=".receivers.SmsReceivedReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        
        <!-- WAP_PUSH receiver for MMS -->
        <receiver
            android:name=".receivers.MmsReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_WAP_PUSH">
            <intent-filter>
                <action android:name="android.provider.Telephony.WAP_PUSH_DELIVER" />
                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
        </receiver>

        <!-- Inline reply receiver for notifications -->
        <receiver
            android:name=".receivers.SmsReplyReceiver"
            android:exported="false" />
        

        
        <!-- Activity for handling SMS composition (default SMS app) -->
        <activity
            android:name=".ui.compose.ComposeSmsActivity"
            android:exported="true"
            android:theme="@style/Theme.BulkSMS.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </activity>
        
        <!-- Service for responding to SMS -->
        <service
            android:name=".service.SmsService"
            android:exported="true"
            android:permission="android.permission.SEND_RESPOND_VIA_MESSAGE">
            <intent-filter>
                <action android:name="android.intent.action.RESPOND_VIA_MESSAGE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </service>
        
        <!-- FCM Service for billing notifications -->
        <service
            android:name=".FCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- Disable default WorkManager initializer for Hilt -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            tools:node="remove" />
            
        <!-- Define generic foreground service type for WorkManager -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="dataSync"
            android:exported="false"
            tools:node="merge" />

    
        <!-- Intasend Subscription Activity -->
        <activity
            android:name=".billing.SubscriptionActivity"
            android:exported="false"
            android:label="Subscribe"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
    </application>

</manifest>
