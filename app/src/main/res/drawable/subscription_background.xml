<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:angle="315"
                android:startColor="@color/fx_glass_surface"
                android:endColor="@color/fx_glass_surface_alt" />
            <stroke
                android:width="1dp"
                android:color="@color/fx_panel_stroke" />
        </shape>
    </item>

    <item
        android:left="-120dp"
        android:top="-160dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:type="radial"
                android:centerX="0.2"
                android:centerY="0.1"
                android:gradientRadius="280dp"
                android:startColor="@color/fx_glow_tertiary"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
