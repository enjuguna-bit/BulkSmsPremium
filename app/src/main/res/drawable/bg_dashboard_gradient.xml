<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/fx_atmosphere_start"
                android:centerColor="@color/fx_atmosphere_mid"
                android:endColor="@color/fx_atmosphere_end" />
        </shape>
    </item>

    <item
        android:top="-180dp"
        android:left="-150dp"
        android:right="90dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.2"
                android:centerY="0.0"
                android:gradientRadius="360dp"
                android:startColor="@color/fx_glow_primary"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:top="130dp"
        android:left="110dp"
        android:right="-150dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.9"
                android:centerY="0.25"
                android:gradientRadius="340dp"
                android:startColor="@color/fx_glow_secondary"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
