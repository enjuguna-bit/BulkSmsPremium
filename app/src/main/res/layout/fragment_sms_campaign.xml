<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/ic_campaign"
                                app:tint="#1E3A8A"
                                android:layout_marginEnd="@dimen/spacing_small"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bulk_sms_title"
                                android:textSize="@dimen/text_xlarge"
                                android:textStyle="bold"
                                android:textColor="#0F172A" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtBulkBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bulk_sms_badge"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#2B1A00"
                            android:background="@drawable/bg_premium_badge"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_subtitle"
                        android:textSize="13sp"
                        android:textColor="#475569"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/txtRecipientCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_recipients_format"
                        android:textSize="@dimen/text_medium"
                        android:gravity="center"
                        android:textColor="#64748B" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- File Import Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_file_upload"
                            app:tint="#1E3A8A"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bulk_sms_import_title"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtFileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_file_loaded_format"
                        android:textSize="@dimen/text_medium"
                        android:textColor="#64748B"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:background="@drawable/bg_activity_list"
                        android:padding="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectFile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_select_file"
                            android:layout_marginEnd="@dimen/spacing_small"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddRecipient"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_add_manual"
                            android:layout_marginStart="@dimen/spacing_small"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressFileLoading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Message Template Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_medium">
                    
                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_template"
                            app:tint="#1E3A8A"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bulk_sms_template_title"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputTemplateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_copy"
                        app:endIconContentDescription="@string/bulk_sms_copy_template"
                        app:endIconTint="#1E3A8A"
                        app:boxStrokeColor="#1E3A8A"
                        app:hintTextColor="#1E3A8A">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputTemplate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/bulk_sms_template_hint"
                            android:gravity="top"
                            android:minLines="5"
                            android:inputType="textMultiLine|textCapSentences" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_placeholders"
                        android:textSize="@dimen/text_small"
                        android:textColor="#64748B"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveTemplate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_save_template"
                            android:layout_marginEnd="@dimen/spacing_small"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTemplateLibrary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_templates"
                            android:layout_marginStart="@dimen/spacing_small"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Template Variables Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTemplateVariables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_variables_title"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold"
                        android:textColor="#0F172A"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/txtVariableCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_variables_count_format"
                        android:textSize="@dimen/text_small"
                        android:textColor="#64748B"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/txtDetectedColumns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_detected_columns_prefix"
                        android:textSize="@dimen/text_small"
                        android:textColor="#64748B"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_variables_hint"
                        android:textSize="@dimen/text_small"
                        android:textColor="#64748B"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewTemplateVariables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Message Preview Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMessagePreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_preview_title"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold"
                        android:textColor="#0F172A"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewMessagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SIM Selection Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_medium">
                    
                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_sim_card"
                            app:tint="#1E3A8A"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bulk_sms_sim_title"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                            
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radioGroupSim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioSim1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SIM 1"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/radioSim2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SIM 2" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bulk_sms_clear_all"
                    android:layout_marginEnd="@dimen/spacing_small"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendBulk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/bulk_sms_send_button"
                    android:layout_marginStart="@dimen/spacing_small"
                    style="@style/Widget.MaterialComponents.Button"
                    app:icon="@drawable/ic_rocket_launch"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <!-- Progress Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_medium">
                    
                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_chart_bar"
                            app:tint="#1E3A8A"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bulk_sms_progress_title"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/txtProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_progress_format"
                        android:textSize="@dimen/text_medium"
                        android:gravity="center" />

                    <!-- Status and Statistics -->
                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_ready"
                        android:textSize="@dimen/text_small"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:gravity="center"
                        android:textColor="#64748B" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_sent_label"
                            android:textSize="@dimen/text_small"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txtSentCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_failed_label"
                            android:textSize="@dimen/text_small"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txtFailedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_queued_label"
                            android:textSize="@dimen/text_small"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txtQueuedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Delivery Status -->
                    <TextView
                        android:id="@+id/txtDeliveryStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_delivery_format"
                        android:textSize="@dimen/text_small"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:gravity="center"
                        android:textColor="#475569" />

                    <!-- Queue Status -->
                    <TextView
                        android:id="@+id/txtQueueStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_queue_format"
                        android:textSize="@dimen/text_small"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:gravity="center"
                        android:textColor="#475569" />

                    <!-- Circuit Breaker Status -->
                    <TextView
                        android:id="@+id/txtCircuitBreakerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:visibility="gone" />

                    <!-- Session Info -->
                    <TextView
                        android:id="@+id/txtSessionInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:visibility="gone" />

                    <!-- Sending Progress Indicator -->
                    <ProgressBar
                        android:id="@+id/progressSending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Controls Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_advanced"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold"
                        android:textColor="#0F172A"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <!-- Send Speed Controls -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_speed_label"
                        android:textSize="@dimen/text_medium"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_medium">

                        <Button
                            android:id="@+id/btnSpeed300"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_speed_fast"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnSpeed600"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_speed_normal"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnSpeed1000"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_speed_slow"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtSendSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 SMS/min"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- Queue Management -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bulk_sms_queue_mgmt"
                        android:textSize="@dimen/text_medium"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnRunQueue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_run_queue"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnClearExhausted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_clear_exhausted"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- Send Control Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_small">

                        <Button
                            android:id="@+id/btnPauseResume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_pause"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnStopSending"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bulk_sms_stop"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recipients List -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="#E3ECFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_medium">
                    
                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_group"
                            app:tint="#1E3A8A"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/bulk_sms_recipients_list"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRecipients"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/bg_activity_list"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
