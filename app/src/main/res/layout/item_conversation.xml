<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/color_surface"
    app:strokeColor="@color/color_outline_variant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Contact Avatar -->
        <TextView
            android:id="@+id/ivContactPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/color_primary"
            android:gravity="center"
            android:text="@string/placeholder_avatar_initial"
            android:textColor="@color/color_on_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Conversation Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Contact Name and Status Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvContactName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/placeholder_contact_name"
                    android:textColor="@color/color_on_surface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Pinned indicator -->
                <ImageView
                    android:id="@+id/ivPinned"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_push_pin"
                    android:visibility="gone"
                    app:tint="@color/color_primary" />

                <!-- Archived indicator -->
                <ImageView
                    android:id="@+id/ivArchived"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_archive"
                    android:visibility="gone"
                    app:tint="@color/color_on_surface_variant" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_time_1030_am"
                    android:textColor="@color/color_on_surface_variant"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Phone Number (optional) -->
            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/placeholder_phone_number"
                android:textColor="@color/color_on_surface_variant"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Last Message and Unread Badge -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tvUnreadBadge"
                    android:orientation="vertical">

                    <!-- Last Message Preview -->
                    <TextView
                        android:id="@+id/tvLastMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/placeholder_last_message_preview"
                        android:textColor="@color/color_on_surface_variant"
                        android:textSize="14sp" />

                    <!-- Message Count -->
                    <TextView
                        android:id="@+id/tvMessageCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/placeholder_message_count"
                        android:textColor="@color/color_on_surface_variant"
                        android:textSize="11sp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Unread Badge -->
                <LinearLayout
                    android:id="@+id/tvUnreadBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/unread_badge_background"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvUnreadCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="3dp"
                        android:text="@string/placeholder_unread_count"
                        android:textColor="@color/color_on_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
