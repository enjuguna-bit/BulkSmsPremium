<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_tiny"
    app:cardCornerRadius="@dimen/spacing_small"
    app:cardElevation="@dimen/card_elevation_low">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_marginEnd="@dimen/spacing_small"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/color_primary"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_person"
            app:tint="@color/color_on_primary"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_contact_name"
                android:textColor="@color/color_on_surface"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/text_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_message_preview_short"
                android:textColor="@color/color_on_surface_variant"
                android:textSize="@dimen/text_small"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_time_1030_am"
            android:textColor="@color/color_on_surface_variant"
            android:textSize="@dimen/text_small"
            android:layout_marginStart="@dimen/spacing_small" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
