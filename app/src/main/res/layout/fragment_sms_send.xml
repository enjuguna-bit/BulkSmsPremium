<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_sms_title"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_on_surface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_sms_subtitle"
                        android:textSize="13sp"
                        android:textColor="@color/color_on_surface_variant"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtSendBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_sms_badge"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/fx_badge_text"
                    android:background="@drawable/bg_premium_badge"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:hint="@string/send_sms_phone_hint"
                app:helperText="@string/send_sms_phone_helper"
                app:boxStrokeColor="@color/color_primary"
                app:hintTextColor="@color/color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_sms_select_contact"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:icon="@drawable/ic_contacts"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_small"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectMultipleContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_sms_select_multiple_contacts"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:icon="@drawable/ic_group"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_small"
                app:cornerRadius="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:hint="@string/send_sms_message_hint"
                app:boxStrokeColor="@color/color_primary"
                app:hintTextColor="@color/color_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:minLines="5"
                    android:inputType="textMultiLine|textCapSentences" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txtCharCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_sms_char_count_default"
                android:textSize="@dimen/text_small"
                android:textColor="@color/color_on_surface_variant"
                android:gravity="end"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:strokeWidth="1dp"
                app:strokeColor="@color/color_outline_variant"
                app:cardBackgroundColor="@color/color_surface">
                
                <RadioGroup
                    android:id="@+id/radioSimGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_small">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioSim1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_sms_sim_1"
                        android:checked="true"
                        android:layout_weight="1"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radioSim2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_sms_sim_2"
                        android:layout_weight="1"/>
                </RadioGroup>
                
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/error_red"
                app:cardBackgroundColor="@color/color_error_container">
                
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/error_red"
                    android:padding="@dimen/spacing_medium" />
                    
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendSms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_sms_button"
                android:textSize="@dimen/text_medium"
                style="@style/Widget.Material3.Button"
                app:icon="@drawable/ic_send_sms_action"
                app:iconGravity="textEnd"
                app:iconPadding="@dimen/spacing_small"
                app:cornerRadius="14dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

